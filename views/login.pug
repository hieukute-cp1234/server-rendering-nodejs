doctype html
html(lang="en")
  include layout/layout
  head
  body(style="background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://wallpaperaccess.com/full/1691682.jpg') no-repeat;background-size: cover;")
    div(class="content-login")
      div(class="form-logo")
        image(src="/image/logo.png") 
      div(class="form-login")
        h1(style="text-align: center;") Login
        if error
          div(class="error")= error
        form(action="/login" method="POST")
          labe Email:
          input(name="email" type="text")
          label(class="form-label") Password:
          input(name="password" type="password")
          div(class="form-button")
            button(type="submit") Sign in
            button(type="button" onclick="redirectLogin('REGISTER');") Sign up
