div(class="header")
  div(class="logo")
    image(src="https://www.instagram.com/static/images/web/mobile_nav_type_logo.png/735145cfe0a4.png")
  div(class="title-header")
    p(style="-webkit-user-select: none;")= titlePage
  div(class="input-header")
    button
      i.fa.fa-search
    input(type="text" placeholder="Search...")
  div(class="profile")
    a(href="/" title="Xem blog của mọi người")
      i.fa.fa-home
    a(href="" title="Đăng blog của bạn" style="font-size: 22px;" id="open-popup")
      i.fa.fa-plus-square
    if user
      div(class="box-profile")
        if user.avatar
          image(src=`/image/${user.avatar}`)
        else 
          image(src='https://www.kindpng.com/picc/m/22-223863_no-avatar-png-circle-transparent-png.png')
        span(style="-webkit-user-select: none;")= user.userName
        div(class="dropdown")
          div(class="menu-item")
            a(href="/profile")
              i.fa.fa-user-circle profile
          div(class="menu-item")
            a(href="/login")
              i.fa.fa-sign-out logout
    else 
      div(class="btn-signin")
        a(href="/login")
          i.fa.fa-sign-in đăng nhập
div(class="wrapper-popup-blog")
  div(class="popup-add-blog")
    div(class="popup-header")
      div(style="width: 35px;")
      div(style="font-size: 30px; font-weight: bold; color: rgba(14, 14, 14, 0.8)") Tạo mới blog
      div(id="close-popup" title="Đóng popup")
        i.fa.fa-times-circle
    hr(width="90%")
    form(action="/blog" method="POST" enctype="multipart/form-data")
      div(class="content-popup")
        textarea(name="content" rows="13" cols="50" placeholder="Bạn đang nghĩ gì...")
        div(class="chose-file")
          button
            i.fa.fa-picture-o
          input(type="file" name="imageBlog" accept="image/*")
      div(style="padding: 0 20px")
        button(id="btn-submit-add-blog" type="submit") Đăng
